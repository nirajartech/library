%h1 Listing books

%table
  %thead
    %tr
      %th Name
      %th Subject type
      %th Author
      %th Price
      %th Actions

  %tbody
    - @books.each do |book|
      %tr
        %td= book.name
        %td= book.subject_type
        %td= book.author
        %td= book.price
        / %td= link_to 'Show', book
        / %td= link_to 'Edit', edit_book_path(book)
        / %td= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }
        %td 
          %select{onchange: "this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);"}
            %option{:value => book_path(book)}
              Show
            %option{:value => edit_book_path(book)}
              Edit
            %option{:value => book, :method => :delete, :confirm => "You sure?"}
              Destroy
%br

= link_to 'New Book', new_book_path


  

